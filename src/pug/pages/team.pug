extends ../layout/main

block head
  link(rel="stylesheet", href="https://unpkg.com/swiper@8/swiper-bundle.min.css")

block variables
  - var title = '華峰建設';
  - var description = 'Description for Webpack + Pug';
  - var pageClass = 'index-page';

block content
  div(class="lg:max-w-[1140px] flex flex-col items-center lg:items-start px-[29px] md:px-[70px] lg:px-0 mt-[52px] md:mt-[135px] mb-[90px] md:mb-[135px] lg:mb-[220px] lg:mx-auto")
    div(class="lg:w-full lg:flex lg:justify-between lg:items-center mb-[36px] md:mb-[113px] lg:mb-[95px]")
      div(class="flex flex-col lg:flex-row items-center leading-none")
        h3(class="text-font-gray text-[15px] md:text-[35px] border-b-[2.5px] md:border-b-[6px] border-main-blue mb-[13px] md:mb-8 lg:mr-10 lg:mb-0 pb-[9px] md:pb-6") 團隊業績
        span(class="text-subtitle-gray text-xs md:text-[25px] md:leading-none lg:mb-5") Team Performance
    div(class="grid gap-y-[50px] md:gap-y-[124px] lg:gap-y-[208px]")
      - var cases = [1, 2, 3]
      each item, index in cases
        div(class="flex flex-col items-center")
          img(class="w-full mb-4 md:mb-9 lg:mb-10", src="assets/img/banner0"+ (index+1) +".png", alt="")
          div(class="lg:w-full flex flex-col lg:flex-row lg:justify-between items-center")
            div(class="text-[15px] md:text-[38px] mb-[25px] md:mb-[62px] lg:mb-0") 建案案名 / 台北市 大同區
            a(href=`${index+1===2?"history-read.html":"case-read.html"}` class="w-20 md:w-[165px] inline-block text-xs md:text-[23px] md:leading-tight text-main-blue text-center py-[6.5px] md:py-[13px] border border-main-blue rounded") 詳細內容
