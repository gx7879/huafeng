block content
  div(class="px-[30px] md:px-[70px] lg:px-0 mt-[52px] md:mt-[135px] mb-[110px] md:mb-[180px] lg:mb-80 -mx-4")
    div(class="lg:max-w-[1366px] w-full flex justify-center items-center lg:mx-auto mb-[42px] md:mb-[112px] lg:mb-[121px]")
      div(class="flex flex-col justify-center items-center leading-none")
