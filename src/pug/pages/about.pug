block script
  script(src="https://unpkg.com/swiper@8/swiper-bundle.min.js")
  script(src="https://unpkg.com/aos@2.3.1/dist/aos.js")
  script(type='text/javascript').
    AOS.init();
    const swiperBuild = new Swiper('.swiper-build', {
      slidesPerView: 1.2,
      spaceBetween: 8,
      loop: true,
      autoplay: true,
      breakpoints: {
        768: {
          spaceBetween: 20
        },
        1024: {
          slidesPerView: 2.5,
          spaceBetween: 20
        }
      }
    });